<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/information_background" />

    <EditText
        android:id="@+id/editTextDosis"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Tratamiento"
        android:inputType="text"
        android:textColorHint="#3B608c"
        android:background="@drawable/edittext_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMedicamentos" />

    <EditText
        android:id="@+id/editTextMedicamentos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Diagnostico"
        android:inputType="text"
        android:textColorHint="#3B608c"
        android:background="@drawable/edittext_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCama" />

    <EditText
        android:id="@+id/editTextCama"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Última actualización"
        android:inputType="text"
        android:textColorHint="#3B608c"
        android:background="@drawable/edittext_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFechaI" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="199dp"
        android:layout_height="60dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medic_information" />

    <EditText
        android:id="@+id/editTextFechaI"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Fecha creación"
        android:inputType="text"
        android:textColorHint="#3B608c"
        android:background="@drawable/edittext_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="92dp"
        android:layout_height="36dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:text="Fecha creación:"
        app:layout_constraintEnd_toStartOf="@+id/editTextMedicamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="95dp"
        android:layout_height="34dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="Fecha última actualización:"
        app:layout_constraintEnd_toStartOf="@+id/editTextMedicamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="93dp"
        android:layout_height="37dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:text="Diagnostico:"
        app:layout_constraintEnd_toStartOf="@+id/editTextMedicamentos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:text="Tratamiento:"
        app:layout_constraintEnd_toStartOf="@+id/editTextDosis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>